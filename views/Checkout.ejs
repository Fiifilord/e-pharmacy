<!-- views/checkout.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkout</title>
  
</head>
<style>
  /* public/styles.css */

/* Reset some default styles */
body, h1, h2, h3, p, ul {
  margin: 0;
  padding: 0;
  font-family: 'Courier New', Courier, monospace;
  font-weight: bold;
  font-size: 18px;
}

/* Apply a simple layout */
body {
  font-family: Arial, sans-serif;
  background-color: #f5f5f5;
  
}

header {
  background-color: #333;
  color: white;
  padding: 1rem;
}

main {
  max-width: 1200px;
  margin: 2rem auto;
  background-color: white;
  padding: 2rem;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h1, h2 {
  color: #333;
  font-weight: bold;
}

ul {
  list-style: none;
  margin: 1rem 0;
}

li {
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 1rem 0;
}

img {
  width: 100px;
  height: auto;
  margin-right: 1rem;
}

.order-summary {
  text-align: right;
  font-weight: bold;
}

.btn {
  display: inline-block;
  padding: 0.5rem 1rem;
  background-color: #333;
  color: white;
  text-decoration: none;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.btn:hover {
  background-color: #555;
}

   /* Add spacing between price and quantity */
   .cart-items li {
      display: flex;
      justify-content: space-between; /* This will add space between price and quantity */
      border-bottom: 1px solid #eee;
      padding: 1rem 0;
      font-weight: bold;
    }

    /* Style the "Place Order" button and add hover effect */
    .order-summary .btn {
      display: inline-block;
      padding: 0.5rem 1rem;
      background-color: #333;
      color: white;
      text-decoration: none;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s; /* Add a smooth transition effect */
    }

    .order-summary .btn:hover {
      background-color: #555; /* Change background color on hover */
    }
</style>
<body>
  <header>
    <%- include('header') %>
  </header>
  
  <main class="checkout-page">
    <h1>Checkout</h1>

    <section class="cart-items">
      <h2>Your Cart</h2>
      <ul>
        <% session.cart.forEach(item => { %>
          <li>
            <img src="<%= item.image %>" alt="<%= item.name %>">
            <h3><%= item.name %></h3>
            <p>Price: ₵<%= item.price %></p>
            <p>Quantity: <%= item.quantity %></p>
          </li>
        <% }); %>
      </ul>
    </section>

    <section class="order-summary">
      <h2>Order Summary</h2>
      <p>Total: ₵<%= calculateTotalPrice(session.cart) %></p>
      <a href="/place_order" class="btn">Place Order</a>
    </section>
  </main>

  <footer>
    <!-- Include your footer content here -->
  </footer>
</body>
</html>
