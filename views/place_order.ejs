<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Your meta tags, CSS links, and other head elements -->

  <style>
    /* Add your custom styles here */

    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    /* Your header and navigation menu styles */

    nav {
      background-color: #333;
      color: #fff;
      padding: 10px;
    }

    nav ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    nav li {
      display: inline;
      margin-right: 20px;
    }

    /* Your content section styles */

    .order_section {
      background-color: #f9f9f9;
      padding: 30px;
    }

    .order_section h2 {
      text-transform: uppercase;
      font-size: 24px;
      margin-bottom: 20px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin-bottom: 5px;
    }

    input,
    textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    /* Your footer section styles */

    footer {
      background-color: #333;
      color: #fff;
      padding: 10px;
      text-align: center;
    }

    /* Your button styles */

    .place_order_btn {
      background-color: #4CAF50;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
    }

    .place_order_btn:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>

<!-- Your header and navigation menu -->
<nav>
  <ul>
    <!-- Your navigation menu items -->
  </ul>
</nav>

<!-- Your content section -->
<section class="order_section layout_padding">
  <div class="container">
    <h2 class="text-uppercase">Place Your Order</h2>
    <form id="orderForm">
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
      </div>
      <div class="form-group">
        <label for="phone">Phone:</label>
        <input type="tel" id="phone" name="phone" required>
      </div>
      <div class="form-group">
        <label for="address">Address:</label>
        <textarea id="address" name="address" rows="4" required></textarea>
      </div>
      <!-- Additional form fields as needed for your order information -->
      <button onclick="placeOrder()">Place Order</button>
    </form>
  </div>
</section>

<!-- Your footer section -->
<footer>
  <!-- Your footer content here... -->
</footer>

<!-- Include the JavaScript code to handle placing the order -->
<script>

    
  // Add event listener to the form submission
  document.getElementById('orderForm').addEventListener('submit', placeOrder);
</script>

</body>
</html>
