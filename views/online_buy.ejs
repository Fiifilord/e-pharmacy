    <p class="subheading">Purchase medicines conveniently from E pharmacy's online store.</p>
    <!-- Display medicine items as product cards -->
    <div class="product-list">
      <% medicines.forEach(item => { %>
        <div class="product-card">
          <img src="<%= item.image_url %>" alt="<%= item.medicine_name %>" />
          <h2><%= item.medicine_name %></h2>
          <p>â‚µ <%= item.medicine_price.toFixed(2) %></p>
          <!-- Form to add item to cart -->
          <form action="/add_to_cart" method="POST">
            <input type="hidden" name="image" value="<%= item.image_url %>" />
            <input type="hidden" name="name" value="<%= item.medicine_name %>" />
            <input type="hidden" name="price" value="<%= item.medicine_price %>" /> <!-- Remove the extra dot -->
            <input type="hidden" name="quantity" value="1" /> <!-- Set the quantity, e.g., to 1 -->
            <button type="submit">Add to Cart</button>
          </form>
          <a href="/view_details/<%= item.id %>" class="view-details-link">View Details</a>
        </div>
      <% }); %>
    </div>
  </div>
